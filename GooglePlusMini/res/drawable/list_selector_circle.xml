<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="#16cedb" android:endColor="#09adb9" android:startColor="#18d7e5" />
        </shape>
        </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#9B9B9B" android:centerColor="#FFFFFF" android:startColor="#9B9B9B" />
            <corners android:radius="2dp" />
        </shape></item>
        
    <item><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#9B9B9B" android:centerColor="#FFFFFF" android:startColor="#9B9B9B" />
            <corners android:radius="2dp" />
        </shape></item>
</selector>
